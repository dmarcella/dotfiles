[user]
	name = David Marcella
	email = marcella2113@gmail.com
	
[core]
	quotepath = false
	excludesfile = /Users/dmarcella/.gitignore_global
	
[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto

################################################################################

[diff]
	tool = Kaleidoscope
	
[difftool]
	prompt = false
	
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[merge]
	tool = Kaleidoscope
	
[mergetool]
	prompt = false
	
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustExitCode = true

################################################################################
	
[alias]
	g = git
	ga = git add
	gl = git log
	l = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'
	gs = git status
	gd = git diff
	gm = git commit -m
	gma = git commit -am
	gb = git branch
	gc = git checkout
	gra = git remote add
	grr = git remote rm
	gpu = git pull
	gcl = git clone
	ksshow = "!f() { local SHA=${1:-HEAD}; git difftool -y -t Kaleidoscope $SHA^..$SHA; }; f"
	ksreview = "!f() { local SHA=${1:-HEAD}; local BRANCH=${2:-master}; if [ $SHA == $BRANCH ]; then SHA=HEAD; fi; git difftool -y -t Kaleidoscope $BRANCH...$SHA; }; f"
